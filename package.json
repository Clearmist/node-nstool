{
  "name": "node-nstool",
  "version": "0.1.0",
  "description": "Node native module to access nstool.",
  "keywords": [
    "nstool",
    "switch",
    "nintendo",
    "nca",
    "xci"
  ],
  "main": "index.js",
  "scripts": {
    "build": "npm run build-libraries && node-gyp rebuild --silent",
    "build-libraries": "npm-run-all --parallel libfmt liblz4 libmbedtls --serial libtoolchain libpietendo",
    "libfmt": "cd src/deps/libfmt && cmake-js rebuild -d ../../../library/libfmt -o ../../../library",
    "liblz4": "cd src/deps/liblz4 && cmake-js rebuild -d ../../../library/liblz4 -o ../../../library",
    "libmbedtls": "cd src/deps/libmbedtls && cmake-js rebuild -d ../../../library/libmbedtls -o ../../../library",
    "libtoolchain": "cd src/deps/libtoolchain && cmake-js rebuild -d ../../../library/libtoolchain -o ../../../library",
    "libpietendo": "cd src/deps/libpietendo && cmake-js rebuild -d ../../../library/libpietendo -o ../../../library",
    "nstool": "cd src/nstool && cmake-js rebuild -d ../../library/nstool -o ../../library",
    "clean": "node-gyp clean",
    "preinstall": "echo Building libraries && npm run build-libraries",
    "install": "echo Building addon && node-gyp rebuild"
  },
  "homepage": "https://github.com/Clearmist/node-nstool#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Clearmist/node-nstool.git"
  },
  "author": {
    "name": "Matthew Sanders",
    "url": "https://github.com/Clearmist"
  },
  "license": "ISC",
  "dependencies": {
    "cmake-js": "^7.2.1",
    "node-addon-api": "^7.0.0",
    "node-gyp-build": "^4.6.1"
  },
  "devDependencies": {
    "node-gyp": "^10.0.1",
    "npm-run-all": "^4.1.5"
  },
  "gypfile": true,
  "binary": {
    "napi_versions": [
      3
    ]
  },
  "config": {
    "runtime": "napi",
    "target": 3
  }
}
